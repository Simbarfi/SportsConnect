<Window x:Class="SportConnect.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportConnect"
        mc:Ignorable="d"
        Title="Add Event" 
        Height="322" 
        Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA54B4B"/>
                <GradientStop Color="#FF311717" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Canvas HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="420" Margin="10,10,0,0">
            <Label x:Name="EventLab" Content="Event Name" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFF9F4F4" Width="106" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="EventText" TextWrapping="Wrap" Width="150" VerticalScrollBarVisibility="Auto" MaxLines="1" Canvas.Left="120" Canvas.Top="6" MaxLength="100"/>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="390" Margin="10,46,0,0">
            <Label x:Name="SportLab" Content="Sport" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFFAF9F9"  Width="106" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="SportText" TextWrapping="Wrap" Width="150" MaxLines="1" Canvas.Left="120" Canvas.Top="6" MaxLength="45"/>
        </Canvas>
        <Canvas HorizontalAlignment="Center" Height="32" VerticalAlignment="Top" Width="430" Margin="0,82,0,0">
            <Label x:Name="StartLab" Content="Start" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFF9F4F4"  Canvas.Top="1" Width="105" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="StartText" TextWrapping="Wrap" Width="67" MaxLines="1" Canvas.Left="255" Canvas.Top="7" SelectionOpacity="-6" AllowDrop="False" MaxLength="5" Text="00:00" PreviewTextInput="StartPreviewTextInput"/>
            <DatePicker x:Name="StartDatePic" Width="134" Canvas.Left="117" BorderBrush="{x:Null}" Canvas.Top="4" />
            <ComboBox x:Name="StartAMPMCom" Canvas.Left="333" Canvas.Top="7" Width="38" Height="18" Padding="3,1.1,0,3">
                <ComboBoxItem Content="AM" IsSelected="True"/>
                <ComboBoxItem Content="PM"/>
            </ComboBox>
        </Canvas>
        <Canvas HorizontalAlignment="Center" Height="32" VerticalAlignment="Top" Width="430" Margin="0,119,0,0">
            <Label x:Name="EndLab" Content="End" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFF9F4F4"  Canvas.Top="1" Width="106" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="EndText" TextWrapping="Wrap" Width="67" MaxLines="1" Canvas.Left="255" Canvas.Top="7" SelectionOpacity="-6" AllowDrop="False" MaxLength="5" Text="00:00" PreviewTextInput="StartPreviewTextInput"/>
            <DatePicker x:Name="EndDatePic" Width="134" Canvas.Left="117" Canvas.Top="4" BorderBrush="{x:Null}" />
            <ComboBox x:Name="EndAMPMCom" Canvas.Left="333" Canvas.Top="7" Width="38" Height="18" Padding="3,1.1,0,3">
                <ComboBoxItem Content="AM" IsSelected="True"/>
                <ComboBoxItem Content="PM"/>
            </ComboBox>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="374" Margin="10,156,0,0">
            <Label x:Name="MaxPlayersLab" Content="Max Players" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFF9F4F4" Width="106" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="MaxPlayersText" TextWrapping="Wrap" Width="30" MaxLines="1" IsUndoEnabled="False" Canvas.Left="120" Canvas.Top="6" PreviewTextInput="MaxPlayersTextOnPreviewTextChange"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="3" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="220" Margin="10,192,0,0">
            <Label x:Name="SkillLevelLab" Content="Skill Level" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFF9F4F4" Width="106" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="SkillLevelText" TextWrapping="Wrap" Width="80" MaxLines="1" IsUndoEnabled="False" Canvas.Left="120" Canvas.Top="6" MaxLength="25"/>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="269" Margin="10,228,0,0">
            <Label x:Name="LocationLab" Content="Location" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18" Foreground="#FFF9F4F4" Width="106" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="LocationText" TextWrapping="Wrap" Width="140" MaxLines="1" IsUndoEnabled="False" Canvas.Left="120" Canvas.Top="6" MaxLength="80"/>
        </Canvas>
        <Button x:Name="AddEntryBut" Style="{DynamicResource RoundedButtonStyle}" Content="Add Entry" HorizontalAlignment="Left" Margin="284,210,0,0" VerticalAlignment="Top" Height="30" Width="100" FontFamily="Times New Roman" FontSize="18" Click="AddEntryButOnClick" />
        <Button x:Name="ExitBut" Style="{DynamicResource RoundedButtonStyle}" Content="Exit" HorizontalAlignment="Left" Margin="284,244,0,0" VerticalAlignment="Top" Height="30" Width="100" FontFamily="Times New Roman" FontSize="18" Click="ExitButOnClose" />
    </Grid>
</Window>
