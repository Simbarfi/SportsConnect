<Window x:Class="SportConnect.MeetupMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportConnect"
        mc:Ignorable="d"
        Title="Meetups" Height="498" Width="613">
    <Grid Margin="10,10,10,21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="499*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="318" VerticalAlignment="Top" Width="347" Stretch="UniformToFill" Margin="10,81,0,0" Source="/temp_map.png"/>
        <Label Content="Click an event to join! Click anywhere on the map to start creating an event." HorizontalAlignment="Left" Margin="10,399,0,0" VerticalAlignment="Top" Height="26" Width="408"/>
        <Grid Margin="0,0,0,375" Grid.ColumnSpan="2">
            <Image HorizontalAlignment="Left" Stretch="UniformToFill" Height="43" VerticalAlignment="Center" Width="47" Margin="10,0,0,0" Source="/profilepic.png" RenderTransformOrigin="0.596,0.488"/>
            <Button Content="Chat" HorizontalAlignment="Left" Margin="521,0,0,0" VerticalAlignment="Center" Width="40" Click="Button_Click_1"/>
            <Button Content="Profile" HorizontalAlignment="Left" Margin="476,0,0,0" VerticalAlignment="Center" Width="40" Click="Button_Click"/>
            <Label Content="SportConnect" FontSize="30" HorizontalAlignment="Left" Margin="159,8,0,0" VerticalAlignment="Top" Height="56" Width="190"/>

        </Grid>

    </Grid>

</Window>
