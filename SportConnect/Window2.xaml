<Window x:Class="SportConnect.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportConnect"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Bottom">

        <ListBox Name="AccountList" HorizontalAlignment="Left" Height="275" Margin="117,107,0,0" VerticalAlignment="Top" Width="573" Grid.ColumnSpan="2" SelectionChanged="AccountList_SelectionChanged"/>
        <TextBox Name="AccountName" HorizontalAlignment="Left" Height="38" Margin="117,37,0,0" Text="Account Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" TextAlignment="Right" TextChanged="TextBox_TextChanged" FontSize="18"/>
        <Button Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="38" Margin="487,37,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click"/>
        <Button Name="AddFriendButton" Content="Add Friend" HorizontalAlignment="Left" Height="38" Margin="601,37,0,0" VerticalAlignment="Top" Width="89" Click="AddFriendButton_Click"/>

    </Grid>
</Window>
