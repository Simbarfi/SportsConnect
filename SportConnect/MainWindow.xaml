<Window x:Class="SportConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportConnect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="10,10,10,21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Center" Height="310" VerticalAlignment="Top" Width="466" Stretch="UniformToFill" Margin="0,75,0,0" Source="/sports.jfif"/>
        <Grid Margin="0,0,0,328">
            <Button Content="SignUp" HorizontalAlignment="Left" Margin="696,0,0,0" VerticalAlignment="Center" Width="54" Click="Button_Click"/>
            <Button Content="Login" HorizontalAlignment="Left" Margin="651,0,0,0" VerticalAlignment="Center" Width="40" Click="Button_Click_1"/>
            <Label Content="SportConnect" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="56" Width="190"/>

        </Grid>

    </Grid>

</Window>
