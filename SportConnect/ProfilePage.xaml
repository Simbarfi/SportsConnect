<Window x:Class="SportConnect.ProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportConnect"
        mc:Ignorable="d"
        Title="ProfilePage" Height="450" Width="800" Background="#36393F"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Image x:Name="ProfilePic"  IsEnabled="False" Source="/User.png" Margin="10,6,0,0" Height="138" VerticalAlignment="Top" HorizontalAlignment="Left" Width="132"/>
        <Button x:Name="EditProfileButton" Content="Edit Profile" HorizontalAlignment="Left" Margin="639,15,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="20"/>
        <TextBox Name="BioDesc" Foreground="black" AcceptsReturn="True" HorizontalAlignment="Left" Height="254" Margin="20,143,0,0" Text="Insert Bio Here" TextWrapping="Wrap" VerticalAlignment="Top" Width="417" TextChanged="TextBox_TextChanged_1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Background="White"/>
        <Button Opacity="0" x:Name ="EditProfPic" HorizontalAlignment="Left" Height="45" Margin="97,10,0,0" VerticalAlignment="Top" Width="45" IsEnabled="False" Click="EditProfPic_Click" BorderBrush="{x:Null}">
            <Image Source="/editPencilImg.png" Height="34" Width="36"></Image>
        </Button>
        <ListBox x:Name ="UpcomingEvents" HorizontalAlignment="Left" Height="254" Margin="460,143,0,0" VerticalAlignment="Top" Width="317" SelectionChanged="UpcomingEvents_SelectionChanged" IsEnabled="False" Foreground="Black"/>
        <Label Name="FirstLast" Content="First Last" HorizontalAlignment="Left" Margin="142,62,0,0" VerticalAlignment="Top" Width="247" Height="63" FontSize="37" FontWeight="Bold" Foreground="#FFF9F4F4"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="731,13,0,0" VerticalAlignment="Top" Click="Back_Click_1" Height="23" Width="46"/>
        <Label Name="EventHeader" Content="Upcoming Events" HorizontalAlignment="Left" Height="58" Margin="489,70,0,0" VerticalAlignment="Top" Width="259" FontSize="30" FontWeight="Bold" Foreground="White"/>


    </Grid>
</Window>
